



<section class="mdl-layout__tab-panel is-active" id="scroll-tab-1">
          <div class="page-content">
	<% @top_concerns.each do |issue_group| %>
            <div class="card-wide mdl-card mdl-shadow--2dp">
              <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--2-col">
                	<div class="round med"><%= image_tag(issue_group.try(:primary_photo), :class => "group-img") %></div>
                </div>
                <div class="mdl-cell mdl-cell--10-col">
                  <h4><%= issue_group.try(:name) %></h4>
                  <p><%= issue_group.try(:description) %></p>
                  
				  <div class="more">
				  <!--
                    <div class="image-gallery">
                      <img src="https://upload.wikimedia.org/wikipedia/commons/5/59/Hawksbill_Sea_Turtle_Carey_de_Concha_%285840602412%29.jpg">
                      <img src="https://muestracine.files.wordpress.com/2013/09/shutterstock_143039761.jpg">
                      <img src="https://pixabay.com/static/uploads/photo/2014/12/26/23/46/sea-turtle-580778_960_720.jpg">
                      <img src="https://pixabay.com/static/uploads/photo/2014/08/26/13/28/sea-turtle-427942_960_720.jpg">
                      <img src="http://vldb.org/2015/farm8.staticflickr.com/7393/12776939755_95e05ba862_o.jpg">
                      <img src="http://www.lbknews.com/wp-content/uploads/2012/07/greenseaturtle-1024x768.jpg">
                    </div>
					-->
                    <h5>Products made from <%= issue_group.try(:name) %></h5>
                    <p><%= issue_group.try(:name) %> products come in many different shapes and forms. Below are some of the most common types of products in Jamaica to be aware of.</p>
                    <div class="product-listing">
                    	<% issue_group.products.each do |product| %>
		                      <div class="mdl-grid">
		                        <div class="mdl-cell mdl-cell--2-col">
		                          <div class="round small"><%= image_tag(product.try(:primary_photo)) %></div>
		                        </div>
		                        <div class="mdl-cell mdl-cell--8-col">
		                          <h6><%= product.try(:name) %></h6>
		                          <p><%= product.try(:description) %></p>
		                        </div>
		                      </div>
                      	<% end %>
                  	</div>
                  </div>
                </div>
              </div>
              <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect more-toggle">
                  More
                </a>
              </div>
            </div>
		   <% end %>

          </div>
        </section>

